<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="Article">
    <!-- 取别名 -->
    <typeAlias alias="Article" type="com.raycloud.pojo.Article"/>
    <!-- 定制返回的map -->
    <resultMap id="ArticleMap" class="Article" >
        <result property="id" column="id"/>
        <result property="configRule" column="config_rule"/>
        <result property="username" column="username"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="headPhotoUrl" column="head_photo_url"/>
        <result property="readNum" column="read_num"/>
        <result property="author" column="author"/>
        <result property="categoryId" column="category_id"/>
        <result property="boardNum" column="board_num"/>
        <result property="created" column="created"/>
        <result property="modified" column="modified"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="fieldsAs">
        id,
        config_rule as configRule,
        username,title,content,
        head_photo_url as headPhotoUrl,
        read_num as readNum,
        author,
        category_id as categoryId,
        board_num as boardNum,
        created,
        modified,
        status
    </sql>
    <sql id="selector">
        select
        <dynamic>
            <isNotEmpty property="fields">
                $fields$
            </isNotEmpty>
            <isEmpty property="fields">
               <include refid="fieldsAs"></include>
            </isEmpty>
        </dynamic>
        from article_$splitTableName$
    </sql>
    <sql id="where">
        <dynamic prepend="where">
            <isNotNull property="id" prepend="and">
                id = #id#
            </isNotNull>
            <!-- 支持id集合来查找多个 -->
            <isNotEmpty property="keys" prepend="and">
                id in
                <iterate open="(" close=")" conjunction="," property="keys">
                    #keys[]#
                </iterate>
            </isNotEmpty>
            <isNotNull property="username" prepend="and">
                username = #username#
            </isNotNull>
            <isNotNull property="configRule" prepend="and">
                config_rule = #configRule#
            </isNotNull>
            <isNotNull property="title" prepend="and">
                title = #title#
            </isNotNull>
            <isNotNull property="content" prepend="and">
                content = #content#
            </isNotNull>
            <isNotNull property="headPhotoUrl" prepend="and">
                head_photo_url = #headPhotoUrl#
            </isNotNull>
            <isNotNull property="readNum" prepend="and">
                read_num = #readNum#
            </isNotNull>
            <isNotNull property="author" prepend="and">
                author = #author#
            </isNotNull>
            <isNotNull property="categoryId" prepend="and">
                category_id = #categoryId#
            </isNotNull>
            <isNotNull property="boardNum" prepend="and">
                board_num = #boardNum#
            </isNotNull>
            <isNotNull property="created" prepend="and">
                created = #created#
            </isNotNull>
            <isNotNull property="modified" prepend="and">
                modified = #modified#
            </isNotNull>
            <isNotNull property="status" prepend="and">
                status = #status#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- 切记，order 后面不能用##,而应该用$$ -->
    <sql id="order">
        <dynamic prepend="order by">
            <isNotEmpty property="orderFields">
                <iterate property="orderFields" conjunction="," open="" close="">
                    $orderFields[].fieldName$ $orderFields[].order$
                </iterate>
            </isNotEmpty>
        </dynamic>
    </sql>

    <sql id="limit">
        <dynamic prepend="limit">
            <isNotEmpty property="startRow">
                $startRow$,$pageSize$
            </isNotEmpty>
        </dynamic>
    </sql>



    <!-- 获取文章列表 -->
    <select id="getList" parameterClass="Article"  resultClass="Article">
        select
        a.id,
        a.config_rule as configRule,
        a.username,
        a.title,
        a.content,
        a.head_photo_url as headPhotoUrl,
        a.read_num as readNum,
        a.author,
        a.category_id as categoryId,
        a.board_num as boardNum,
        a.created,
        a.modified,
        a.status,
        b.name as category
        from article_$splitTableName$ a left join category b on a.category_id = b.id
        <include refid="where"></include>
        <include refid="order"></include>
        <include refid="limit"></include>
    </select>

    <select id="getCount" parameterClass="Article" resultClass="int">
        select count(1) from article_$splitTableName$
        <include refid="where"></include>
    </select>

    <!-- 获取文章详细内容 -->
    <select id="get" parameterClass="Article"  resultClass="Article">
        <include refid="selector"></include>
        <include refid="where"></include>
        limit 1
    </select>

    <insert id="insert" parameterClass="Article">
        insert into article_$splitTableName$
        (config_rule,username,title,content,head_photo_url,read_num,author,category_id,board_num,created,status)
        values
        (#configRule#,#username#,#title#,#content#,#headPhotoUrl#,#readNum#,#author#,#categoryId#,#boardNum#,#created#,#status#)
        <selectKey keyProperty="id" resultClass="long">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <update id="updateNum" parameterClass="Article">
        update article_$splitTableName$
        <dynamic prepend="set">
            <isNotNull prepend="," property="readNum">
                read_num = read_num + $readNum$
            </isNotNull>
            <isNotNull prepend="," property="boardNum">
                board_num = board_num + $boardNum$
            </isNotNull>
        </dynamic>
        where id = #id#
    </update>







</sqlMap>
